import tkinter as tk

def show_action_scheme():
    situation = situation_var.get()

    if situation == "Перешкоди на дорозі":
        action_scheme = "1. Зменшити швидкість.\n2. Уникати перешкоди, якщо це безпечно.\n3. Зупинитися і визначити ступінь пошкоджень.\n4. Зателефонувати до поліції і повідомити про пригоду."
    elif situation == "Зіткнення з іншим автомобілем":
        action_scheme = "1. Зупинитися та увімкнути аварійні сигнали.\n2. Переконатися, що всі пасажири безпечні.\n3. Зателефонувати до поліції та оформити ДТП.\n4. За необхідності, надати допомогу постраждалим."
    elif situation == "Зупинка на ж/д переїзді":
        action_scheme = "1. Зупинитися і вимкнути двигун.\n2. Переконатися, що всі пасажири безпечні та вийшли з автомобіля.\n3. Переконатися, що немає наближаючого потягу.\n4. Зателефонувати до поліції та повідомити про ситуацію.\n5. Дотримуватися інструкцій працівників з ж/д переїзду."
    elif situation == "Порушення правил паркування":
        action_scheme = "1. Перевірити, чи існує право власника автомобіля на паркування в даному місці.\n2. Визначити, чи порушено безпеку руху.\n3. Якщо паркування незаконне або загрожує безпеці, зателефонувати до поліції та повідомити про порушення."
    elif situation == "Проблеми з гальмами":
        action_scheme = "1. Зменшити швидкість та увімкнути аварійні сигнали.\n2. Використовувати ручний гальмо, якщо можливо.\n3. Знайти безпечне місце для зупинки.\n4. Зателефонувати до сервісної служби та повідомити про проблеми з гальмами."
    else:
        action_scheme = "Немає відомої схеми дій для даної ситуації."

    action_text.delete("1.0", tk.END)
    action_text.insert(tk.END, action_scheme)

# Створення головного вікна
window = tk.Tk()
window.title("Схема дій водія")
window.geometry("450x300")

# Створення мітки та вибору ситуації на дорозі
situation_label = tk.Label(window, text="Оберіть ситуацію на дорозі:")
situation_label.pack()

situation_var = tk.StringVar()
situation_var.set("Перешкоди на дорозі")  # Значення за замовчуванням

situation_dropdown = tk.OptionMenu(window, situation_var, "Перешкоди на дорозі", "Зіткнення з іншим автомобілем", "Зупинка на ж/д переїзді", "Порушення правил паркування", "Проблеми з гальмами")
situation_dropdown.pack()

# Створення кнопки для показу схеми дій
show_button = tk.Button(window, text="Показати схему дій", command=show_action_scheme)
show_button.pack()

# Створення текстового поля для відображення схеми дій
action_text = tk.Text(window)
action_text.pack()

# Запуск головного циклу програми
window.mainloop()
